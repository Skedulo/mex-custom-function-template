{
  "name": "custom-function",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "private": true,
  "owner": "skedulo",
  "dependencies": {
    "@skedulo/mex-service-libs": "0.1.2",
    "graphql": "^16.8.1",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@luckycatfactory/esbuild-graphql-loader": "^3.8.1",
    "@types/axios": "^0.14.0",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.1",
    "@types/node": "^20.12.11",
    "esbuild": "^0.21.1",
    "graphql-tag": "^2.12.6",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "lint": "prettier --check src",
    "format": "prettier --write src",
    "clean": "rm -rf build && rm -rf dist && rm -f customfunction.tar.gz",
    "build": "yarn generate && tsc -b .",
    "generate": "ts-node src/tools/generate-graphql-types.ts && ts-node src/tools/generate-info.ts",
    "bundle": "yarn bundle:fe && yarn bundle:be",
    "bundle:fe": "ts-node src/buildscripts/esbuild.frontend.ts",
    "bundle:be": "yarn generate && ts-node src/buildscripts/esbuild.backend.ts",
    "start": "yarn generate && ts-node src/localDevIndex.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
